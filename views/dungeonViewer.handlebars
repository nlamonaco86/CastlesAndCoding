<div class="container mt-5 vt" style="border:double;color:white;border-width:15px;">

    <div class="row text-center">
        <h1 class="vt-lg text-danger">{{options.heading}} Dungeon</h1>
    </div>

    <div class="row">

        <div class="col-lg-6">
            <div class="row">
                <div class="col-lg-12 d-flex justify-content-center"><img
                        src="https://via.placeholder.com/550x300?text={{model.name}}"
                        style="max-height:100%;max-width:100%"></img></div>
                <div class="col-lg-12 d-flex justify-content-center vt-sm text-center">{{model.description}}</div>
                <div class="col-lg-12 d-flex justify-content-center vt-md text-center text-warning">Bonus Gold:
                    {{model.gold}}</div>
                <div class="col-lg-12 d-flex justify-content-center vt-md text-center text-warning">Treasure:
                    {{model.treasure}}</div>
            </div>

        </div>

        <div class="col-lg-6 mt-5">
            <div class="row">
                <div class="d-flex justify-content-evenly">
                    <div class="text-warning">Boss: {{model.boss.name}}</div>
                </div>
                <div class="d-flex justify-content-evenly">
                    <div class="text-white vt-sm">{{model.boss.taunt}}</div>
                </div>
                <div class="d-flex justify-content-evenly">
                    <div>HP: <span>{{model.boss.hp}}</span></div>
                    <div>Armor: <span>{{model.boss.armor}}</span></div>
                </div>
                <div class="d-flex justify-content-evenly">
                    <div>Crit %: <span>{{model.boss.critChance}}</span></div>
                    <div>Block %: <span>{{model.boss.blockChance}}</span></div>
                </div>
                <div class="d-flex justify-content-evenly">
                    <div>XP: <span class="text-info">{{model.boss.xp}}</span></div>
                    <div>Gold: <span class="text-warning">{{model.boss.gold}}</span></div>
                </div>

                <div class="d-flex justify-content-center mt-2">
                    <div class="" style="border:double;border-width:10px;padding:12px">

                        <div class="d-flex justify-content-center">
                            <div><span>{{model.boss.damageLow}}-{{model.boss.damageHigh}}</span> damage</div>
                        </div>
                    </div>
                </div>


            </div>
        </div>

        <div class="text-center">
             <div class="d-flex justify-content-center"><a href="/confirm/delete/{{type}}/{{model._id}}"
                            class="a mb-5">Delete Dungeon</a></div>
            {{#each menuOptions}}
            {{> menuLink}}
            {{/each}}
        </div>

    </div>
    <style>
        span {
            color: #5cb85c;
        }

        img {
            max-width: 100%;
        }
    </style>